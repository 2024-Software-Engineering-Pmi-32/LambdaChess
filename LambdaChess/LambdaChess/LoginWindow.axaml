<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LambdaChess.LoginWindow"
        Title="Login/Register to LambdaChess"
        Width="800" Height="500">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Name="EmailBox" Width="200" Watermark="Email" />
        <TextBox Name="UsernameBox" Width="200" Watermark="Username" Margin="0,10,0,0" />
        <TextBox Name="PasswordBox" Width="200" PasswordChar="*" Margin="0,10,0,0" Watermark="Password" />
        
        <Button Content="Login" Width="200" Margin="0,10,0,0" Click="OnLoginButtonClick" />
        <Button Content="Register" Width="200" Margin="0,10,0,0" Click="OnRegisterButtonClick" />
    </StackPanel>
</Window>